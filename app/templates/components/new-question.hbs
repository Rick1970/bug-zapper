{{#if addNewQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Who are you?</label>
          <span class="contrast">{{input value=author id="author"}}</span>
      </div>

      <div class="form-group">
        <label for="message">Enter your question</label>
          <span class="contrast">{{input value=message id="message"}}</span>
      </div>

      <div class="form-group">
        <label for="detail">Paste code snippet here:</label>
        <span class="contrast">{{input value=detail id="detail"}}</span>
      </div>

      <button class="btn-custom btn-lg"{{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn-custom btn-lg" {{action 'questionFormShow'}}>Submit your question</button>
{{/if}}
